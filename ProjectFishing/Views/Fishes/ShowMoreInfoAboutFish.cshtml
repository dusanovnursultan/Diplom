                                        <div class="item active" >
                                            <div class="slider-image">
                                                <img style="height:500px" src="~/images/ForViews/Fishies/{{FishModel.Images[0].Name}}" alt="slider-1">
                                            </div>
                                        </div>
                                        <div class="item" ng-if="FishModel.Images[1]!=null" >
                                            <div class="slider-image">
                                                <img style="height:500px" src="~/images/ForViews/Fishies/{{FishModel.Images[1].Name}}"  alt="slider-1">
                                            </div>
                                        </div>
                                        <div class="item " ng-if="FishModel.Images[2]!=null" >
                                            <div class="slider-image">
                                                <img style="height:500px" src="~/images/ForViews/Fishies/{{FishModel.Images[2].Name}}"  alt="slider-1">
                                            </div>
                                        </div>
                                        <a class="left carousel-control" href="#main-carousel" role="button" data-slide="prev">
                                            <i class="fa fa-angle-left"></i>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="right carousel-control" href="#main-carousel" role="button" data-slide="next">
                                            <i class="fa fa-angle-right"></i>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div><!-- Main Carousel /-  -->
                                </div><!-- Photo Slider /- -->

                            </div>

                            <div class="entry-meta">
                                <div class="post-date">
                                    <p><span>{{FishModel.Post.Name}}</span></p>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="entry-title">
                        <h3>Описание: {{FishModel.Post.Description}}</h3>
                    </div>
                    <div class="entry-content">
                        <p>Места обитания: {{FishModel.Post.Habitats}}</p>
                        <p>Вид: {{FishModel.Post.ClassificationOfFish}}</p>
                        <p>Размеры: {{FishModel.Post.Size}}</p>
