
<head>

    <script>


        var mainApp = angular.module("mainApp", []);
        var idViewBag = @ViewBag.IdFish;
        mainApp.controller("mainController", function ($scope, $http) {
            $scope.FishModel;
            $scope.ImagesList;
            $scope.IdFish = idViewBag;

            $http({
                method: 'GET',
                url: '/Fishes/GetFishById/'+$scope.IdFish,

            })
                .then(function succes(responce) {
                    $scope.FishModel = responce.data;
                   
                    console.log($scope.FishModel);
                });

        });
    </script>
</head>
